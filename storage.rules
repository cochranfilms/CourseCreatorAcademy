rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can upload/read their own profile images
    match /profile-images/{userId}/{allPaths=**} {
      // Allow public read (avatars are shown on public pages)
      allow read: if true;
      // Allow users to write only to their own folder
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // 5MB max
        && request.resource.contentType.matches('image/.*');
      // Allow users to delete their own images
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Public profile banners - public read; owner-only writes
    match /profile-banners/{userId}/{allPaths=**} {
      // Banners are shown on public profiles, so allow public read
      allow read: if true;
      // Only the owner can upload/update/delete; restrict to images <= 10MB
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Listing images - users can upload/read listing images
    match /listing-images/{userId}/{allPaths=**} {
      // Listing images appear in public contexts (e.g., creator kits), so allow public read
      allow read: if true;
      // Allow users to write only to their own folder
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // 5MB max
        && request.resource.contentType.matches('image/.*');
      // Allow users to delete their own images
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Project images - users can upload/read project images
    match /project-images/{userId}/{allPaths=**} {
      // Project thumbnails can be shown publicly on profiles
      allow read: if true;
      // Allow users to write only to their own folder
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // 5MB max
        && request.resource.contentType.matches('image/.*');
      // Allow users to delete their own images
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Legacy creator video uploads (staging for Mux ingest)
    // Owner needs read access to generate downloadURL for Mux ingest
    match /legacy-uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 2 * 1024 * 1024 * 1024 // 2 GB max
        && (
          request.resource.contentType.matches('video/.*') ||
          request.resource.contentType == 'application/octet-stream' // some browsers/flows use this
        );
    }

    // Legacy creator public assets (avatar/banner). Shown on public pages
    // Read is public; only the owner can write. 5MB image max.
    match /legacy-creators/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Course resources (for future use)
    match /courses/{courseId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Feedback screenshots - users can upload/read their own feedback screenshots
    match /feedback-screenshots/{userId}/{allPaths=**} {
      // Allow authenticated users to read feedback screenshots (for admin review)
      allow read: if request.auth != null;
      
      // Allow users to write only to their own folder
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // 5MB max
        && request.resource.contentType.matches('image/.*');
      
      // Allow users to delete their own screenshots
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Assets - premium downloadable assets (LUTs, presets, SFX, templates, etc.)
    // Preview images in asset folders are public for display
    match /assets/{category}/{assetFolder}/{fileName} {
      // All files in asset folders are public (images for preview, ZIPs still protected by download API)
      allow read: if true;
      // Admin-only writes (via Firebase Admin SDK)
      allow write: if false;
    }
    
    // ZIP files directly in category folders (e.g., assets/luts/file.zip)
    match /assets/{category}/{zipFile} {
      // ZIP files require authentication (downloads handled via signed URLs from API)
      allow read: if request.auth != null;
      // Admin-only writes (via Firebase Admin SDK)
      allow write: if false;
    }

    // Discount logos - partner brand logos for discount cards
    match /discount-logos/{discountId}/{fileName} {
      // Public read (logos shown on discount cards)
      allow read: if true;
      // Admin-only writes (via Firebase Admin SDK or API)
      allow write: if false;
    }

    // Admin asset uploads - temporary staging area for ZIP files before processing
    // Owner needs read access to generate downloadURL for server-side processing
    // Note: Content type and size validation relaxed for resumable uploads - server-side validation ensures ZIP files
    match /admin-assets-uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Size check removed temporarily - resumable uploads may not have request.resource.size available initially
      // Server-side processing validates file size when processing
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

